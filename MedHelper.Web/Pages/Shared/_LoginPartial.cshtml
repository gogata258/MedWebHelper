@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<tag_form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm">
		<ul class="navbar-nav">
			<li class="nav-item text-light"><tag_a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</tag_a></li>
			<li class="nav-item text-light"><button type="submit" class="btn btn-link navbar-btn nav-link">Log out</button></li>
		</ul>
	</tag_form>
}
else
{
	<ul class="navbar-nav">
		<li class="nav-item text-light"><tag_a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</tag_a></li>
		<li class="nav-item text-light"><tag_a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Log in</tag_a></li>
	</ul>
}