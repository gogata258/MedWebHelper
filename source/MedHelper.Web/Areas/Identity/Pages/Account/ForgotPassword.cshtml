@page
@model ForgotPasswordModel
@{
	ViewData["Title"] = "Forgot your password?";
}

<h2>@ViewData["Title"]</h2>
<h4>Enter your email.</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<tag_form method="post">
			<tag_div asp-validation-summary="All" class="text-danger"></tag_div>
			<div class="form-group">
				<tag_label asp-for="Email"></tag_label>
				<tag_input asp-for="Email" class="form-control" />
				<tag_span asp-validation-for="Email" class="text-danger"></tag_span>
			</div>
			<button type="submit" class="btn btn-success">Submit</button>
		</tag_form>
	</div>
</div>

@section Scripts {
	<tag_partial name="_ValidationScriptsPartial" />
}
