@page
@model SetPasswordModel
@{
	ViewData["Title"] = "Set password";
	ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Set your password</h4>
<tag_partial name="_StatusMessage" model="@Model.StatusMessage" />
<p class="text-info">
	You do not have a local username/password for this site. Add a local
	account so you can log in without an external login.
</p>
<div class="row">
	<div class="col-md-6">
		<tag_form id="set-password-form" method="post">
			<tag_div asp-validation-summary="All" class="text-danger"></tag_div>
			<div class="form-group">
				<tag_label asp-for="PasswordForm.NewPassword"></tag_label>
				<tag_input asp-for="PasswordForm.NewPassword" class="form-control" />
				<tag_span asp-validation-for="PasswordForm.NewPassword" class="text-danger"></tag_span>
			</div>
			<div class="form-group">
				<tag_label asp-for="PasswordForm.ConfirmPassword"></tag_label>
				<tag_input asp-for="PasswordForm.ConfirmPassword" class="form-control" />
				<tag_span asp-validation-for="PasswordForm.ConfirmPassword" class="text-danger"></tag_span>
			</div>
			<input type="submit" class="btn btn-success" value="Save" />
		</tag_form>
	</div>
</div>

@section Scripts {
	<tag_partial name="_ValidationScriptsPartial" />
}
