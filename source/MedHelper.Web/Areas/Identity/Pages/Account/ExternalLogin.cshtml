@page
@model ExternalLoginModel
@{
	ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>
<h4>Associate your @Model.LoginProvider account.</h4>
<hr />

<p class="text-info">
	You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
	Please enter an email address for this site below and click the Register button to finish
	logging in.
</p>

<div class="row">
	<div class="col-md-4">
		<tag_form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<tag_div asp-validation-summary="All" class="text-danger"></tag_div>
			<div class="form-group">
				<tag_label asp-for="RegisterForm.Username"></tag_label>
				<tag_input asp-for="RegisterForm.Username" class="form-control" />
				<tag_span asp-validation-for="RegisterForm.Username" class="text-danger"></tag_span>
			</div>
			<div class="form-group">
				<tag_label asp-for="RegisterForm.Email"></tag_label>
				<tag_input asp-for="RegisterForm.Email" class="form-control" />
				<tag_span asp-validation-for="RegisterForm.Email" class="text-danger"></tag_span>
			</div>
			<div class="form-group">
				<tag_label asp-for="RegisterForm.BirthDate"></tag_label>
				<tag_input asp-for="RegisterForm.BirthDate" value="@Model.RegisterForm.BirthDate.ToString("yyyy-MM-dd")" class="form-control" />
				<tag_span asp-validation-for="RegisterForm.BirthDate" class="text-danger"></tag_span>
			</div>
			<div class="form-group">
				<tag_label asp-for="RegisterForm.FullName"></tag_label>
				<tag_input asp-for="RegisterForm.FullName" class="form-control" />
				<tag_span asp-validation-for="RegisterForm.FullName" class="text-danger"></tag_span>
			</div>
			<input type="submit" class="btn btn-success" value="Register" />
		</tag_form>
	</div>
</div>

@section Scripts {
	<tag_partial name="_ValidationScriptsPartial" />
}

