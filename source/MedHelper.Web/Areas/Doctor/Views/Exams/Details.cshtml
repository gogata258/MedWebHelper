@model PatientExamDetailsViewModel
@{
	ViewData["Title"] = "Details";
}
<h2>@ViewData["Title"]</h2>
<form>
	<div class="form-group">
		<tag_label asp-for="Name"></tag_label>
		<tag_input class="form-control" asp-for="Name" value="@Model.Name" readonly />
	</div>
	<div class="form-group">
		<tag_label asp-for="Note"></tag_label>
		<tag_textarea class="form-control" asp-for="Note" value="@Model.Name" readonly></tag_textarea>
	</div>
	<div class="form-row">
		<div class="form-group col-md-8">
			<tag_label asp-for="Date"></tag_label>
			@if (Model.Date is null)
			{
				<input class="form-control" value="No result yet" readonly />
			}
			else
			{
				<tag_input class="form-control" asp-for="Date" value="@Model.Date" readonly />
			}
		</div>
		<div class="form-group col-md-4">
			<tag_label asp-for="Status"></tag_label>
			<tag_input class="form-control" asp-for="Status" value="@Model.Status" readonly />
		</div>
	</div>
</form>